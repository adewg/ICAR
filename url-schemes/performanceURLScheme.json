                "responses": {
                    "200": {
                        "description": "Successful. The response contains the resources for the given location.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/icarWeightEventCollection"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/default"
                    },
                    "500": {
                        "$ref": "#/components/responses/default"
